.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      = current_user.name
      .side-bar__user-name__box__menu
      .side-bar__user-name__box__login-user
      = link_to new_group_path do
        %i.far.fa-edit
      .side-bar__user-name__box__edit
      = link_to edit_user_path(current_user) do
        %i.fas.fa-cog
  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__groups__list
        = link_to edit_group_path(group) do
          .side-bar__groups__list__group-user
            = group.name
          .side-bar__groups__list__message
            = "なし"